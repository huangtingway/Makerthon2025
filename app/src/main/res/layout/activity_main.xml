<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical"
        android:layout_marginHorizontal = "10dp"
        android:layout_marginVertical = "10dp"
        tools:context = ".MainActivity"
        android:background = "#BEFFFFFF">



    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "3.5"
            android:layout_gravity = "top|center"
            android:gravity = "top|center"
            android:orientation = "horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint = "#FFEB3B">

        <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "7"
                android:gravity = "center|left"
                android:text = "智慧通報系統"
                android:textSize = "20sp"
                android:textStyle = "bold"
                />

        <com.google.android.material.button.MaterialButton
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "3"
                android:paddingHorizontal = "5dp"
                android:layout_marginVertical = "10dp"
                android:id="@+id/btn_reportHistory"
                android:layout_marginHorizontal = "5dp"
                android:textSize = "16sp"
                app:cornerRadius = "10dp"
                android:text = "通報記錄"
                app:backgroundTint = "#2E5DEA"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "3"
                android:paddingHorizontal = "5dp"
                android:layout_marginVertical = "10dp"
                android:layout_marginHorizontal = "10dp"
                android:textSize = "16sp"
                app:cornerRadius = "10dp"
                android:text = "登入"
                app:backgroundTint = "#1976D2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "3"
            android:layout_gravity = "center"
            android:gravity = "center"
            android:layout_marginVertical="5dp"
            android:orientation = "horizontal">

        <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "center|left"
                android:text = "通報類型："
                android:textSize = "16sp"
                />

        <Spinner
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:id="@+id/spinner_reportType"
                android:entries="@array/reportType"
                android:layout_weight = "3.5"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "5"
            android:layout_gravity = "center"
            android:gravity = "center"
            android:layout_marginVertical="5dp"
            android:orientation = "horizontal">

        <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "top|left"
                android:layout_marginVertical="15dp"
                android:text = "地點："
                android:textSize = "16sp"
                />

        <LinearLayout
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "5"
                android:orientation = "vertical">

            <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "0dp"
                    android:layout_weight = "1"
                    android:orientation = "horizontal">

                <Spinner
                        android:layout_width = "0dp"
                        android:layout_height = "match_parent"
                        android:id="@+id/spinner_location_city"
                        android:entries="@array/city"
                        android:paddingHorizontal="0dp"
                        android:layout_weight = "2"/>

                <EditText
                        android:layout_width = "0dp"
                        android:id="@+id/et_location"
                        android:layout_height = "match_parent"
                        android:layout_weight = "4.5"/>

            </LinearLayout>



            <Button
                    android:layout_width = "match_parent"
                    android:layout_height = "0dp"
                    android:layout_marginHorizontal = "20dp"
                    android:text = "掃描QRCode"
                    android:id="@+id/btn_scanQRCode"
                    android:textSize = "16sp"
                    android:layout_weight = "1"
                    android:backgroundTint = "#F57C00"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "6"
            android:layout_gravity = "center"
            android:gravity = "center"
            android:layout_marginVertical="5dp"
            android:orientation = "horizontal">

        <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "top|left"
                android:layout_marginVertical="15dp"
                android:text = "故障說明："
                android:textSize = "16sp"
                />

        <LinearLayout
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "3.5"
                android:orientation = "vertical">

            <EditText
                    android:layout_width = "match_parent"
                    android:id="@+id/et_description"
                    android:layout_height = "0dp"
                    android:layout_weight = "1"/>

            <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width = "0dp"
                        android:layout_height = "match_parent"
                        android:layout_weight = "1"
                        android:padding="0dp"
                        android:id="@+id/iv_image1"
                        app:srcCompat = "@drawable/baseline_image_not_supported_24"/>

                <ImageView
                        android:layout_width = "0dp"
                        android:layout_height = "match_parent"
                        android:layout_weight = "1"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/iv_image2"
                        android:padding="0dp"
                        app:srcCompat = "@drawable/baseline_image_not_supported_24"/>

                <ImageView
                        android:layout_width = "0dp"
                        android:layout_height = "match_parent"
                        android:layout_weight = "1"
                        android:padding="0dp"
                        android:id="@+id/iv_image3"
                        app:srcCompat = "@drawable/baseline_image_not_supported_24"/>

                <com.google.android.material.button.MaterialButton
                        android:layout_width = "0dp"
                        android:layout_height = "wrap_content"
                        android:layout_marginHorizontal = "10dp"
                        android:text = "上傳圖片"
                        app:cornerRadius="10dp"
                        android:id="@+id/btn_uploadImage"
                        android:textSize = "16sp"
                        android:padding="5dp"
                        android:layout_weight = "2"
                        android:backgroundTint = "#2E5DEA"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <me.dm7.barcodescanner.zxing.ZXingScannerView
            android:id="@+id/ZXingScannerView_QRCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="13"
            />

    <com.google.android.material.button.MaterialButton
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "4"
            android:layout_marginHorizontal = "20dp"
            android:text = "新增通報"
            android:textStyle = "bold"
            android:textSize = "24sp"
            android:id="@+id/btn_addReport"
            app:cornerRadius = "20dp"
            android:layout_marginVertical = "10dp"
            app:backgroundTint = "#EF5350"/>
</LinearLayout>